<div id="favorite">
  <% if product.favorites.find_by(user: Current.user) %> 
    <%= link_to '🤍', favorite_path(product_id: product.id), data: {
      turbo_method: :delete
    } %>
  <% else %>
    <%= link_to '❤️', favorites_path(product_id: product.id), data: {
      turbo_method: :post
    } %>
  <% end %>
</div>